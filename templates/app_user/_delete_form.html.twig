<form method="post" action="{{ path('app_user_delete', {'id': app_user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user? All reservations reserved for this user will be removed as well.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app_user.id) }}">
    <button class="form-button form-button__delete">Delete</button>
</form>
