{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div class="flash flash__error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form class="login-form" action="{{ path('app_login') }}" method="post">
        <h2 class="login-form__heading">Login</h2>
        <label class="login-form__label" for="username">Username:</label>
        <input class="login-form__input login-form__input--username" type="text" id="username" name="_username" placeholder="Your username" value="{{ last_username }}">

        <label class="login-form__label" for="password">Password:</label>
        <input class="login-form__input form__input--password" type="password" id="password" name="_password" placeholder="Your password">

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <div class="form__button-wrapper">
            <button class="form-button form-button__login" type="submit">Login</button>
            <p>If you don't have an account, register <a href="{{ path('app_user_registration') }}">here</a>.</p>
        </div>
    </form>
{% endblock %}
